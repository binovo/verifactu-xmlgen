{
    "name": "@binovo/verifactu-xmlgen",
    "version": "1.0.0",
    "description": "Verifactu XML generator",
    "main": "dist/verifactu-xmlgen.js",
    "files": [
        "dist/*"
    ],
    "scripts": {
        "bootstrap": "npm ci && npm run patch",
        "patch": "rm -rf node_modules/xml-core/node_modules/xmldom; cp -r node_modules/xmldom/ node_modules/xml-core/node_modules/",
        "lint": "eslint --no-eslintrc --config .eslintrc.js '*/**/*.{js,ts}' --fix && tsc --noEmit",
        "build": "./scripts/update-version && ./scripts/build-date && npm run build:guards && npm run lint && npm run build:prod:js && ./scripts/make-command",
        "build:prod:js": "webpack --config webpack.prod.js",
        "build:guards": "webpack --config webpack.guards.js",
        "test": "npm run build && env CHROME_BIN=chromium-browser karma start karma.conf.js"
    },
    "keywords": [],
    "author": "Binovo IT",
    "license": "AGPLv3",
    "devDependencies": {
        "@babel/cli": "^7.13.0",
        "@babel/core": "^7.13.8",
        "@babel/plugin-proposal-class-properties": "^7.13.0",
        "@babel/preset-env": "^7.13.9",
        "@babel/preset-typescript": "^7.13.0",
        "@types/crc": "^3.4.0",
        "@types/jasmine": "^3.6.4",
        "@types/qrcode": "^1.4.0",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "@typescript-eslint/parser": "^2.34.0",
        "babel-loader": "^8.2.2",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.3.1",
        "karma": "^6.3.17",
        "karma-chrome-launcher": "^3.1.0",
        "karma-cli": "^2.0.0",
        "karma-jasmine": "^3.3.1",
        "karma-spec-reporter": "0.0.32",
        "karma-webpack": "^5.0.0",
        "lodash": "^4.17.21",
        "prettier": "^2.2.1",
        "ts-auto-guard": "^4.2.0",
        "typescript": "^3.9.9",
        "webpack": "^5.72.0",
        "webpack-cli": "^4.10.0",
        "webpack-merge": "^5.7.3"
    },
    "dependencies": {
        "@types/node-forge": "^0.9.7",
        "commander": "^7.2.0",
        "crc": "^3.8.0",
        "get-stdin": "^9.0.0",
        "jsvat": "^2.5.3",
        "node-forge": "^1.3.1",
        "qrcode": "^1.4.4",
        "xadesjs": "^2.1.1",
        "xmldom": "^0.4.0",
        "xmldsigjs": "^2.1.3"
    }
}
