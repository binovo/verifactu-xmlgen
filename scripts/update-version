#!/bin/bash
set -euo pipefail
script_dir=$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd -P)
cd $script_dir/..

readonly VERSION=$(head package.json | sed -n '/version.*:/ {s/.*: *//; s/,//; p}')
cat > src/version.ts <<EOF
// autogenerated by scripts/update_version
export const VERSION = $VERSION;
EOF
